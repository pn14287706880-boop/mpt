// Prisma schema defining the Postgres data model for the app.

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Pro360EngRule {
  id             String    @id @default(uuid())
  eventName      String
  billingType    String
  tacticField    String?
  isEngagement   Int
  isExposure     Int
  isActive       Int       @default(1)
  isLatest       Int       @default(1)
  version        Int       @default(1)
  validFrom      DateTime  @default(now())
  validTo        DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  modifiedBy     String
  inactivatedAt  DateTime?
  inactivatedBy  String?

  @@unique([eventName, version])
  @@index([eventName, isLatest])
  @@index([eventName, validFrom, validTo])
  @@index([isActive, isLatest])
  @@map("pro360_eng_rules")
}
